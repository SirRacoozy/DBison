<controls:UserControlBase x:Class="DBison.WPF.Views.ServerTabbedPage"
                          xmlns:controls="clr-namespace:DBison.WPF.Controls"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                          xmlns:local="clr-namespace:DBison.WPF.Views"
                          Margin="5">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0"
                CornerRadius="10"
                BorderBrush="#878787"
                BorderThickness="2"
                Padding="5"
                Margin="0 0 5 0">

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <controls:DBisonTextBox Text="{Binding FilterText, Mode=TwoWay}"
                                            Grid.Column="0"
                                            Margin="0 3 0 0"
                                            VerticalAlignment="Center"
                                            mah:TextBoxHelper.Watermark="Search"
                                            TextChanged="__TextChanged" />

                    <Button Grid.Column="1"
                            Margin="5 0 5 0"
                            Background="Transparent"
                            Height="20"
                            Width="20"
                            Command="{Binding [AddServer]}">
                        <Path Fill="White"
                              Data="M3.875,0 L5.125,0 5.125,3.875 9,3.875 9,5.125 5.125,5.125 5.125,9 3.875,9 3.875,5.125 0,5.125 0,3.875 3.875,3.875 3.875,0 z" />
                    </Button>

                </Grid>

                <controls:ServerInfoTreeView Grid.Row="1" />

            </Grid>

        </Border>

        <GridSplitter ResizeDirection="Columns"
                      Grid.Column="1"
                      Width="5"
                      Background="White" />

        <controls:TabControlBase ItemsSource="{Binding Server, Mode=TwoWay}"
                                 SelectedIndex="0"
                                 SelectedItem="{Binding SelectedServer, Mode=TwoWay}"
                                 Grid.Row="0"
                                 Grid.RowSpan="2"
                                 Grid.Column="2"
                                 BorderBrush="Transparent"
                                 BorderThickness="0">

            <controls:TabControlBase.ContentTemplate>
                <DataTemplate>
                    <controls:TabControlBase ItemsSource="{Binding ServerQueryPages, Mode=TwoWay}"
                                             SelectedIndex="0"
                                             SelectedItem="{Binding SelectedQueryPage, Mode=TwoWay}">
                        <controls:TabControlBase.ContentTemplate>
                            <DataTemplate>
                                <local:ServerView Grid.Row="1" />
                            </DataTemplate>
                        </controls:TabControlBase.ContentTemplate>
                    </controls:TabControlBase>
                </DataTemplate>
            </controls:TabControlBase.ContentTemplate>

        </controls:TabControlBase>

    </Grid>
</controls:UserControlBase>