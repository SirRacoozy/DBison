<UserControl x:Class="DBison.WPF.Views.SettingsDialogContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:system="clr-namespace:System;assembly=netstandard">

  <UserControl.Resources>
    <Style TargetType="ItemsControl">
      <Setter Property="ItemTemplate">
        <Setter.Value>
          <DataTemplate>
            <Grid Margin="0 0 0 10">

              <Grid.Resources>
                <Style TargetType="TextBlock">
                  <Setter Property="FontSize"
                                            Value="16" />
                </Style>
              </Grid.Resources>

              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
              </Grid.ColumnDefinitions>
              <TextBlock Text="{Binding Header}"
                                       Grid.Column="0" />

              <ContentControl Grid.Column="2"
                                            Margin="5 0 0 0"
                                            Width="200"
                                            HorizontalAlignment="Left"
                                            x:Name="this">
                <ContentControl.Style>
                  <Style TargetType="ContentControl">
                    <Setter Property="Content">
                      <Setter.Value>
                        <TextBlock Text="NOT IMPLEMENTED TYPE" />
                      </Setter.Value>
                    </Setter>

                    <Style.Triggers>
                      <!--Boolean-->
                      <DataTrigger Binding="{Binding SettingType, Mode=TwoWay}"
                                                         Value="{x:Type system:Boolean}">
                        <Setter Property="ContentTemplate">
                          <Setter.Value>
                            <DataTemplate>
                              <CheckBox IsChecked="{Binding Value, Mode=TwoWay}"
                                                                      DataContext="{Binding DataContext, ElementName=this}" />
                            </DataTemplate>
                          </Setter.Value>
                        </Setter>
                      </DataTrigger>
                      <!--String-->
                      <DataTrigger Binding="{Binding SettingType, Mode=TwoWay}"
                                                         Value="{x:Type system:String}">
                        <Setter Property="ContentTemplate">
                          <Setter.Value>
                            <DataTemplate>
                              <TextBox Text="{Binding Value, Mode=TwoWay}"
                                                                     DataContext="{Binding DataContext, ElementName=this}" />
                            </DataTemplate>
                          </Setter.Value>
                        </Setter>
                      </DataTrigger>
                      <!--Int32-->
                      <DataTrigger Binding="{Binding SettingType, Mode=TwoWay}"
                                                         Value="{x:Type system:Int32}">
                        <Setter Property="ContentTemplate">
                          <Setter.Value>
                            <DataTemplate>
                              <mah:NumericUpDown Value="{Binding Value, Mode=TwoWay}"
                                                                               Minimum="{Binding Minimum, Mode=OneWay}"
                                                                               Maximum="{Binding Maximum, Mode=OneWay}"
                                                                               DataContext="{Binding DataContext, ElementName=this}" />
                            </DataTemplate>
                          </Setter.Value>
                        </Setter>
                      </DataTrigger>
                      <!--UInt32-->
                      <DataTrigger Binding="{Binding SettingType, Mode=TwoWay}"
                                                         Value="{x:Type system:UInt32}">
                        <Setter Property="ContentTemplate">
                          <Setter.Value>
                            <DataTemplate>
                              <mah:NumericUpDown Value="{Binding Value, Mode=TwoWay}"
                                                                               Minimum="{Binding Minimum, Mode=OneWay}"
                                                                               Maximum="{Binding Maximum, Mode=OneWay}"
                                                                               DataContext="{Binding DataContext, ElementName=this}" />
                            </DataTemplate>
                          </Setter.Value>
                        </Setter>
                      </DataTrigger>
                      <!--Double-->
                      <DataTrigger Binding="{Binding SettingType, Mode=TwoWay}"
                                                         Value="{x:Type system:Double}">
                        <Setter Property="ContentTemplate">
                          <Setter.Value>
                            <DataTemplate>
                              <mah:NumericUpDown Value="{Binding Value, Mode=TwoWay}"
                                                                               Minimum="{Binding Minimum, Mode=OneWay}"
                                                                               Maximum="{Binding Maximum, Mode=OneWay}"
                                                                               DataContext="{Binding DataContext, ElementName=this}" />
                            </DataTemplate>
                          </Setter.Value>
                        </Setter>
                      </DataTrigger>
                      <!--DateTime-->
                      <DataTrigger Binding="{Binding SettingType, Mode=TwoWay}"
                                                       Value="{x:Type system:DateTime}">
                        <Setter Property="ContentTemplate">
                          <Setter.Value>
                            <DataTemplate>
                              <mah:DateTimePicker SelectedDateTime="{Binding FallbackValue, Mode=TwoWay}" DataContext="{Binding DataContext, ElementName=this}"/>
                            </DataTemplate>
                          </Setter.Value>
                        </Setter>
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </ContentControl.Style>
              </ContentControl>

            </Grid>
          </DataTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </UserControl.Resources>

  <TabControl ItemsSource="{Binding TabItems, Mode=OneWay}"
                SelectedIndex="0" />

</UserControl>
